# Database - Neon Postgres (same as auth-server for shared data)
DATABASE_URL="postgresql://user:password@ep-xxx.us-east-1.aws.neon.tech/neondb?sslmode=require"

# OpenAI Configuration
# For native OpenAI:
OPENAI_API_KEY="sk-..."

# For Google Gemini compatibility:
OPENAI_BASE_URL="https://generativelanguage.googleapis.com/v1beta/openai/"
# OPENAI_API_KEY="your-google-ai-api-key"

# Chat model - use gemini-2.5-flash for free tier (no prefix needed with /openai/ endpoint)
CHAT_MODEL="gemini-2.5-flash"

# Qdrant Cloud (REST API endpoint - bypasses gRPC issues)
# Include port 6333 for REST API access
QDRANT_URL="https://xxx.us-east4-0.gcp.cloud.qdrant.io:6333"
QDRANT_API_KEY="your-qdrant-api-key"
QDRANT_COLLECTION="physical_ai_book"

# Server Configuration
HOST="0.0.0.0"
PORT="8000"

# Auth Server URL (for session validation)
AUTH_SERVER_URL="http://localhost:3001"

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:3000"
